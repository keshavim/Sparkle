ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq ($(shell echo "test"), "test")
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

ifeq ($(origin CC), default)
  CC = clang
endif
ifeq ($(origin CXX), default)
  CXX = clang++
endif
ifeq ($(origin AR), default)
  AR = ar
endif
RESCOMP = windres
INCLUDES += -I../Sparkle/vendor/spdlog/include -I../Sparkle/src
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef

ifeq ($(config),debug)
TARGETDIR = ../bin/Debug/linux-x86_64/Application
TARGET = $(TARGETDIR)/Application
OBJDIR = ../bin-int/Debug/linux-x86_64/Application
DEFINES += -DSPRK_PLATFORM_LINUX -DSPRK_DEBUG
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++20
LIBS += ../bin/Debug/linux-x86_64/Sparkle/libSparkle.a ../Sparkle/vendor/Glfw/bin/Debug/linux-x86_64/GLFW/libGLFW.a
LDDEPS += ../bin/Debug/linux-x86_64/Sparkle/libSparkle.a ../Sparkle/vendor/Glfw/bin/Debug/linux-x86_64/GLFW/libGLFW.a
define POSTBUILDCMDS
	@echo Running postbuild commands
	../bin/Debug/linux-x86_64//Application/Application
endef

else ifeq ($(config),releasee)
TARGETDIR = ../bin/Releasee/linux-x86_64/Application
